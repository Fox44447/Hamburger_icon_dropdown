@media (min-width: 1024px) {

.menu-toggle {
    display: flex; /* Make the hamburger menu visible */
  }

  .nav-list {
    display: none; /* Hide the navigation panel by default */
    flex-direction: column;
    background-color: #333;
    position: fixed;
    top: 60px;
    right: 0;
    background-color: #333;
    width: 200px;
    padding: 20px;
    box-shadow: -2px 0 5px rgba(0, 0, 0.3);
    transition: transform 0.3s ease, opacity 0.3s ease;
    transform: translateX(100%);
    opacity: 0;
  }

  .nav-list.active {
    display: flex;
    transform: translateX(0);
    opacity: 1;
  }

  .nav-list li a {
    color: #fff;
    padding: 10px;
    text-align: left;
  }

  .nav-list li a:hover {
    color: #60b347; /* Highlight effect*/
  }

